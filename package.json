{
  "name": "videojs-standard",
  "description": "JavaScript style for plugins and tools in the video.js ecosystem.",
  "version": "8.0.2",
  "author": "Brightcove, Inc.",
  "scripts": {
    "lint": "./cli.js",
    "test": "npm run lint",
    "preversion": "npm test",
    "version": "is-prerelease || npm run update-changelog && git add CHANGELOG.md",
    "update-changelog": "conventional-changelog -p videojs -i CHANGELOG.md -s"
  },
  "lint-staged": {
    "*.js": [
      "vjsstandard --fix",
      "git add"
    ],
    "README.md": [
      "doctoc",
      "git add"
    ]
  },
  "bin": {
    "vjsstandard": "./cli.js"
  },
  "bugs": {
    "url": "https://github.com/videojs/standard/issues"
  },
  "dependencies": {
    "commander": "^2.17.1",
    "eslint": "^5.4.0",
    "eslint-config-videojs": "^5.0.2",
    "eslint-plugin-jsdoc": "^3.7.1",
    "eslint-plugin-json-light": "^1.0.3",
    "eslint-plugin-markdown": "^1.0.0-beta.8",
    "find-root": "^1.0.0",
    "tsmlb": "^1.0.0"
  },
  "devDependencies": {
    "conventional-changelog-cli": "^2.0.1",
    "conventional-changelog-videojs": "^3.0.0",
    "doctoc": "^1.3.1",
    "husky": "^1.0.0-rc.13",
    "lint-staged": "^8.0.4",
    "not-prerelease": "^1.0.1",
    "npm-merge-driver-install": "^1.0.0"
  },
  "homepage": "https://github.com/videojs/standard",
  "keywords": [
    "videojs",
    "videojs-standard",
    "check",
    "checker",
    "code",
    "code checker",
    "code linter",
    "code standards",
    "code style",
    "enforce",
    "eslint",
    "hint",
    "jscs",
    "jshint",
    "lint",
    "policy",
    "quality",
    "simple",
    "standard",
    "standard style",
    "style",
    "style checker",
    "style linter",
    "verify"
  ],
  "license": "Apache-2.0",
  "main": "cli.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/videojs/standard.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "vjsstandard": {
    "jsdoc": false
  }
}
